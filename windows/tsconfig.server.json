{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": [
    "electron.ts",
    "electron-main.ts",
    "src/public/**/*.ts",
    "node_modules"
  ]
}
